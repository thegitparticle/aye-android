<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ToastgoandN" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
<!--        activity transitions-->
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
    </style>

    <style name="TextAppearance.LargeTitle" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:fontFamily">@font/gotham_rounded_bold</item>
        <item name="android:textSize">34sp</item>
    </style>

    <style name="TextAppearance.Title1" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:fontFamily">@font/gotham_rounded_bold</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="TextAppearance.Title2" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:fontFamily">@font/gotham_rounded_bold</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="TextAppearance.Title3" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:fontFamily">@font/gotham_rounded_bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearance.Header" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:fontFamily">@font/gotham_rounded_medium</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="TextAppearance.SubheadMed" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:fontFamily">@font/gotham_rounded_medium</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TextAppearance.Subhead" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:fontFamily">@font/gotham_rounded_book</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TextAppearance.BodyMed" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:fontFamily">@font/gotham_rounded_medium</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="TextAppearance.Body" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:fontFamily">@font/gotham_rounded_book</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="TextAppearance.Small" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:fontFamily">@font/gotham_rounded_book</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_from_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_from_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>
</resources>