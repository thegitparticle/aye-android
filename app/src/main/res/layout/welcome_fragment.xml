<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="welcomeViewModel"
            type="com.example.toastgoand.auth.fragments.welcome.WelcomeViewModel" />
    </data>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.toastgoand.auth.fragments.welcome.WelcomeFragment"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/videoView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/welcome_pic1">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="305dp"
        android:layout_height="98dp"
        android:layout_gravity="center"
        android:src="@drawable/white_border_aye" />

    </ImageView>

</LinearLayout>
</layout>