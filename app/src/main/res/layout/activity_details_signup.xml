<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".auth.detailssignup.DetailsSignupActivity">

    <data>

        <variable
            name="detailsSignupModel"
            type="com.example.toastgoand.auth.detailssignup.DetailsSignupViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/auth_dark_splash"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/backIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="60dp"
            android:background="#00000000"
            android:contentDescription="TODO"
            android:minWidth="48dp"
            android:minHeight="48dp"
            app:srcCompat="@drawable/ic_chevronleftbg" />


        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:fontFamily="@font/gotham_rounded_medium"
            android:text="@string/details_signup_main"
            android:textColor="@color/auth_off_light_splash"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/subTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:fontFamily="@font/gotham_rounded_light"
            android:text="@string/details_signup_sub"
            android:textColor="@color/auth_off_light_splash"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/editTextTextPersonName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="20dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="@color/auth_off_light_splash"
            android:fontFamily="@font/gotham_rounded_book"
            android:hint="full name"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:textColorHint="@color/auth_mid_light_splash"
             />

        <EditText
            android:id="@+id/editTextTextPersonName2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="20dp"
            android:ems="10"
            android:inputType="textVisiblePassword"
            android:textColor="@color/auth_off_light_splash"
            android:fontFamily="@font/gotham_rounded_book"
            android:hint="username"
            android:textColorHint="@color/auth_mid_light_splash"
             />

        <androidx.compose.ui.platform.ComposeView
            android:id="@+id/compose_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            />

        <ImageButton
            android:id="@+id/nextImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="0dp"
            android:background="#00000000"
            android:contentDescription="TODO"
            android:minWidth="48dp"
            android:minHeight="48dp"
            app:srcCompat="@drawable/ic_caretright"
            android:visibility="gone"/>

    </LinearLayout>


</layout>