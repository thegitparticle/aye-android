<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".auth.invitedby.InvitedByActivity">

    <data>
        <variable
            name="invitedByModel"
            type="com.example.toastgoand.auth.invitedby.InvitedByViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/blue_splash">

        <TextView
            android:id="@+id/changingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:text="you have been invited by San" />

        <Button
            android:id="@+id/contactsButton"
            android:text="talk to san"
            android:fontFamily="@font/lato"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:layout_width="270dp"
            android:layout_height="60dp"
            android:background="@drawable/big_button_on_blue"
            android:shadowColor="#9CE2FE"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="25"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="bottom"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="45dp"
            />

    </RelativeLayout>
</layout>