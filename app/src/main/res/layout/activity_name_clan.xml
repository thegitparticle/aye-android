<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".auth.clancreate.NameClanActivity">

    <data>
        <variable
            name="nameClanModel"
            type="com.example.toastgoand.auth.clancreate.NameClanViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/auth_dark_splash"
        android:orientation="vertical">


        <ImageButton
            android:id="@+id/backIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="60dp"
            android:background="#00000000"
            android:contentDescription="TODO"
            android:minWidth="48dp"
            android:minHeight="48dp"
            app:srcCompat="@drawable/ic_chevronleftbg" />


        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:fontFamily="@font/lato"
            android:text="@string/stranger_start_clan_naming_heading"
            android:textColor="@color/auth_off_light_splash"
            android:textSize="22dp" />

        <EditText
            android:id="@+id/editClanName"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="60dp"
            android:backgroundTint="@color/off_light_splash"
            android:ems="10"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:fontFamily="@font/lato"
            android:inputType="phone"
            android:orientation="horizontal"
            android:textSize="22sp"
            tools:ignore="SpeakableTextPresentCheck" />


        <ImageButton
            android:id="@+id/nextImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="0dp"
            android:background="#00000000"
            android:contentDescription="TODO"
            android:minWidth="48dp"
            android:minHeight="48dp"
            app:srcCompat="@drawable/ic_caretright" />

    </LinearLayout>


</layout>