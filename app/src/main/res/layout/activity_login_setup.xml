<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".auth.loginsetup.LoginSetupActivity"
    xmlns:fancy="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="loginSetupModel"
            type="com.example.toastgoand.auth.loginsetup.LoginSetupActivity" />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/auth_off_dark_splash">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:text="" />

            <TextView
                android:id="@+id/changingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:text="@string/stranger_start_clan_success" />

        </LinearLayout>

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/openHomeButton"
            android:layout_width="270dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="bottom"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="45dp"
            android:fontFamily="@font/lato"
            android:visibility="invisible"
            fancy:fb_defaultColor="@color/peach_splash"
            fancy:fb_iconPosition="left"
            fancy:fb_radius="30dp"
            fancy:fb_text="dive into aye!"
            fancy:fb_textColor="#FFFFFF" />

    </RelativeLayout>
</layout>